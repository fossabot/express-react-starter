{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2016", "dom"
    ],
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*", "../shared/src/*"]
    }
  },

  "exclude": [
    "node_modules",
    "public",
    "webpack.*.js"
  ]
}
